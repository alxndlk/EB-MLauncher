<Window x:Class="Minecraft_Launcher_WPF.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minecraft_Launcher_WPF"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        WindowStyle="None"
       Title="Эпоха Блоков"  Width="500" Height="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>

        <Image Margin="60,160,60,160" Source="/Resourses/title.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5" />

        <ProgressBar 
            HorizontalAlignment="Center" 
            Height="5" 
            Margin="0,433,0,0" 
            VerticalAlignment="Top" 
            Width="380" 
            Background="#FFBEBFBF" 
            BorderBrush="{x:Null}" 
            Value="0" 
            Foreground="#FF616161" 
            BorderThickness="0,0,0,0"
            x:Name="splashProgressBar"
        />
        
        

    </Grid>
</Window>
